::selection
  background rgba(187, 255, 183, 0.5);
  color #218214
.reveal
  background: black
  background-image url('../../css/imgs/dark-bg.jpg')
  background-size: 100% 100%
  background-repeat no-repeat
  .slides
    height 100%
    font-size 47px
    sup
      font-size 0.8em
    a
      color rgb(119, 179, 0)
    strong
      font-weight normal
      color #6cfc55
    blockquote
      font-weight normal
      font-style italics
      border 1px solid #ACFFA8
      border-radius 5px
      width 85%
      background rgba(255, 255, 255, 0.2)
      padding 5px 15px
      p
        margin 0 auto
    a
      text-decoration underline
    .hljs
      background rgba(250, 250, 250, 0.85);
      border-radius 15px
      padding 15px
      color #333
      max-height 100%
    section
      padding 15px
      padding-top 25px
      color rgb(235, 255, 210)
      height 100%
      background-image url('../../css/imgs/logo.png')
      background-repeat no-repeat, no-repeat
      text-align left
      text-shadow 3px 3px 10px black
      li
        li
          font-size 0.9em
      code
        color rgb(218, 237, 242)
        text-shadow 3px 3px 3px black
      pre code
        text-shadow none
      section
          background-image url('../../css/imgs/bg-dark.png')
      h1
      h2
        color rgb(204, 255, 51)
        text-shadow 3px 3px 5px black
        width 85%
        margin-left 15%
        text-transform none
        text-align right
      h1
        font-size 1.3em
        margin-bottom 5px
      h2
        color rgb(250, 247, 200)
        font-size 1.3em
        margin-top 10px
    .table-of-contents
        a
            color #ebffd2
            text-decoration none
    .slide-title
      background-position top left, bottom right
      background-repeat no-repeat, no-repeat
      h1
      h1
        width 100%
        margin-top 100px
        margin-left 0
        font-size 1.4em
      h2
        margin-top 25px
        margin-left 20px
        font-size 1.1em
        width 100%
    .slide-section
      text-align center
      h1
      h2
        width 100%
        text-align center
        margin-left 0
      h1
        margin-top 20%
        font-size 1.7em
      h2
        margin-top 25px
        font-size 1.1em
     &.slide-questions
       font-size 1em
    .slide-questions
      h1
        text-align right
      h2
        margin-top 15%
        text-align center
        font-size 1.9em
    .signature
      float right
      position fixed
      bottom 70px
      text-align left
    .signature-course
      color rgb(115, 153, 0)
      font-size 1.05em
      font-weight bold
      line-height 21px
    .signature-initiative
      color rgb(245, 255, 214)
      font-size 0.9em
      line-height 25px
      padding-top 10px
      margin-bottom 0
    .signature-link
      color rgb(115, 153, 0)
      font-size: 0.85em
      text-decoration underline
      line-height 10px

    .balloon
      display inline-block
      position absolute
      padding 5px 15px
      font-size 25px
      border 2px solid rgb(245, 255, 224)
      border-radius 15px
      background rgb(159, 132, 113)

    .slide-image
      border: none
      background: none
      position: absolute
      box-shadow: none

    .bubble
      display inline-block
      position absolute
      padding 5px 15px
      font-size 25px
      border 2px solid #f5ffe0
      border-radius 15px
      background #9f8471
      display inline-block
      position relative
      -moz-border-radius 10px
      -webkit-border-radius 10px
      border-radius 10px

    .bubble-left:before
    .bubble-right:before
    .bubble-up:before
    .bubble-up-left:before
    .bubble-up-right:before
    .bubble-down: before
    .bubble-down-left:before
    .bubble-down-right:before
      content ""
      position absolute
      width 0
      height 0

    .bubble-left:before
      right 100%
      border-top 15px solid transparent
      border-right 30px solid #f5ffe0

    .bubble-right:before
      left 100%
      top 50%
      border-bottom 15px solid transparent
      border-left 30px solid #f5ffe0

    .bubble-up:before
    .bubble-up-right:before
      left 95%
      bottom 100%
      border-right 15px solid transparent
      border-bottom 30px solid #f5ffe0

    .bubble-up-left:before
      right 96%
      bottom 100%
      border-left 15px solid transparent
      border-bottom 30px solid #f5ffe0

    .bubble-down:before
    .bubble-down-left:before
      right 95%
      top 100%
      border-left 15px solid transparent
      border-top 30px solid #f5ffe0

    .bubble-down-right:before
      left 96%
      top 100%
      border-right 15px solid transparent
      border-top 30px solid #f5ffe0

#loading
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  background-color: rgba(30,30,30,0.9);
  background-image: url("https://cdn.rawgit.com/TelerikAcademy/Common/master/revealjs-theme/css/imgs/gears.gif");
  color: #fff;
  background-repeat: no-repeat;
  background-position: 50% 40%;
  background-repeat: no-repeat;

  .loading-container
    position: absolute;
    top: 35%;

  .text
    font-size: 1em
    line-height: 7em
    text-align center

  div
    height 100%
    width 100%

.reveal .controls
  bottom 50px

.reveal .slide-number
  bottom 55px

.reveal .social-widget
    position absolute
    bottom 0
    padding-left 15px;
    padding-bottom 18px
    padding-right 15px
    background-color rgba(200, 200, 200, 0.4)
    opacity: 0.3
    z-index: 100
    text-align: center

    &.mobile
      width: 100%
      padding-bottom 5px
      padding-top 0
      padding-left 0
      padding-right 0

    &.left
      left 0
      border-radius 0 5px 0 0

    &.right
      right 0
    border-radius 5px 0 0 0

    &:hover
      opacity 1

    strong
      font-size: 0.5em
      margin-bottom: 5px

    a
      margin-right 5px
      &:last-of-type
        margin-right 0
    img
      height: 30px
      border-radius 5px
      background-color: white;

      &:first-of-type
        margin-top: 15px


      &:hover
        opacity 0.5
        box-shadow: 2px 3px 5px white

.hidden .buttons
  display none !important

.reveal .social-widget.mobile
  display none

.home-btn
	z-index: 100;
	width: 40px;
	height: 40px;
	position: absolute;
	top: 20px;
	left: 20px;
	padding-bottom: 10%;
	border-radius: 50%;
	border: 2px solid #f5f5f5;
	overflow: hidden;
	background #464646;
	box-shadow 0 0 3px gray;
	background-image url(https://raw.githubusercontent.com/TelerikAcademy/Common/master/icons/home-icon.png)
	background-position 50% 50%
	background-size 70%
	background-repeat no-repeat
	
	&:hover
		background-color #555555	
		
	a
		position absolute
		height 100%
		width 100%
		background-color transparent

		

@media (max-width: 640px)
  .reveal .social-widget.desk
    display none
  .reveal .social-widget.mobile
    display block
  #loading
    .loading-container
      top: 35%;
      .text
        font-size: 0.8em;
